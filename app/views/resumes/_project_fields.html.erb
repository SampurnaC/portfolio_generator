<div class="nested-fields border p-3 mb-3 rounded shadow-sm">
  <div class="mb-3">
    <%= f.label :title, "Project Title", class: "form-label" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Enter project title" %>
  </div>

  <div class="mb-3">
    <%= f.label :summary, "Summary", class: "form-label" %>
    <%= f.text_field :summary, class: "form-control", placeholder: "Short summary" %>
  </div>

  <div class="mb-3">
    <%= f.label :url, "Project URL", class: "form-label" %>
    <%= f.text_field :url, class: "form-control", placeholder: "https://example.com (optional)" %>
  </div>

  <div class="d-flex justify-content-between align-items-center">
    <div class="form-check">
      <%= f.check_box :_destroy, class: "form-check-input" %>
      <%= f.label :_destroy, "Remove project on submit", class: "form-check-label" %>
    </div>

  </div>
</div>
