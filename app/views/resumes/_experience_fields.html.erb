<div class="nested-fields border p-3 mb-3 rounded shadow-sm">
  <div class="mb-3">
    <%= f.label :position, "Position", class: "form-label" %>
    <%= f.text_field :position, class: "form-control", placeholder: "Enter position" %>
  </div>

  <div class="mb-3">
    <%= f.label :company_name, "Company Name", class: "form-label" %>
    <%= f.text_field :company_name, class: "form-control", placeholder: "Enter Company Name" %>
  </div>

  <div class="mb-3">
    <%= f.label :summary, "Summary", class: "form-label" %>
    <%= f.text_field :summary, class: "form-control", placeholder: "Enter job role summary" %>
  </div>

  <div class="mb-3">
    <%= f.label :date_from, "Start Date", class: "form-label" %>
    <%= f.date_field :date_from, class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= f.label :date_to, "End Date", class: "form-label" %>
    <%= f.date_field :date_to, class: "form-control" %>
  </div>
  

  <div class="mb-3">
    <%= f.check_box :currently_working %>
    <%= f.label "Are you currently working here ?" %>
  </div>

  <div class="d-flex justify-content-between align-items-center">
    <div class="form-check">
      <%= f.check_box :_destroy, class: "form-check-input" %>
      <%= f.label :_destroy, "Remove project on submit", class: "form-check-label" %>
    </div>

  </div>
</div>
