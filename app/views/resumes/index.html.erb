<h1 class="text-center my-4">All Resumes</h1>

<div class="container">
  <div class="row">
    <% @resumes.each do |resume| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card shadow-sm">
            <%= link_to (user_signed_in? ? new_user_resume_path(current_user, theme: resume.theme) : new_user_session_path), class: "text-decoration-none" do %>
              <%= render "resumes/themes/#{resume.theme}", resume: resume %>
            <% end %>
          </div>
        </div>
    <% end %>
  </div>
</div>
